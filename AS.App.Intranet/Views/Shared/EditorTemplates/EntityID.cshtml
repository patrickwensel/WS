@model decimal?

@(Html.Kendo().DropDownListFor(m => m)
                  .Name("EntityID")
                  .AutoBind(false)
                  .OptionLabel("Select Entity...")
                  .DataTextField("Name")
                  .DataValueField("ID")
                  .DataSource(dataSource => dataSource.Read(read => read.Action("ReadAllEntities", "Hierarchy")).ServerFiltering(true))
                  .HtmlAttributes(new { data_value_primitive = true, style = "list.width:300px"})
            )
@Html.ValidationMessageFor(m => m)
                          